<Window x:Class="A.T.O.M.Validation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A.T.O.M"
        mc:Ignorable="d"
        Title="ATOM - Validation" Height="150" Width="400"
        Background="#4682B4"
         Icon="/Images/Logo.ico">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Arial" FontSize="20">Valider l'action ? </Label>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="60">
            <Button Click="Valider"  FontFamily="Arial" Margin="20" Width="100" >Valider</Button>
            <Button Click="Annuler" FontFamily="Arial" Margin="20" Width="100" >Annuler</Button>
        </WrapPanel>
    </StackPanel>
</Window>