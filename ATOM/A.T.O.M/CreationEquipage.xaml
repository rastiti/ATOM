<Window x:Class="A.T.O.M.CreationEquipage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A.T.O.M"
        mc:Ignorable="d"
        Title="ATOM - Création d'un nouvel Equipage" Height="300" Width="300"
        Background="#4682B4">
    <DockPanel>
        <Label FontSize="25" FontWeight="Bold" DockPanel.Dock="Top" HorizontalAlignment="Center">Création Equipage</Label>

        <StackPanel HorizontalAlignment="Center" DockPanel.Dock="Top">
            <Label>Nom de l'ambulancier 1 :</Label>
            <ComboBox></ComboBox>
            <Label>Renseigner ambulancier 2 si nécessaire</Label>
            
            <Label>Nom de l'ambulancier 2 :</Label>
            <ComboBox></ComboBox>
            <Label >Type de Véhicule</Label>
            <ComboBox></ComboBox>
            
        </StackPanel>
        <WrapPanel Margin="0,10" HorizontalAlignment="Center" DockPanel.Dock="Bottom">
            <Button Margin="5" Width="100">Valider</Button>
            <Button Margin="5" Width="100" Click="Annuler">Annuler</Button>
        </WrapPanel>
    </DockPanel>
</Window>
