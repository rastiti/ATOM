<Window x:Class="ATOM.SuppressionEquipage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATOM"
        mc:Ignorable="d"
        Title="ATOM - Suppression d'un Equipage" Height="200" Width="400"
        Background="#4682B4"
        Icon="/Images/Logo.ico">
    <DockPanel>
        <Label FontSize="25" FontWeight="Bold" DockPanel.Dock="Top" HorizontalAlignment="Center">Suppression d'un Equipage</Label>
        <StackPanel MinWidth="200"  HorizontalAlignment="Center" DockPanel.Dock="Top">
            <Label>Nom de l'équipage :</Label>
            <ComboBox></ComboBox>
            <WrapPanel Margin="0,10" HorizontalAlignment="Center" DockPanel.Dock="Bottom">
                <Button Margin="5" Width="100">Valider</Button>
                <Button Margin="5" Width="100" Click="Annuler">Annuler</Button>
            </WrapPanel>
        </StackPanel>
    </DockPanel>
</Window>
