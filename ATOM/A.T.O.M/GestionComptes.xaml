<Window x:Class="A.T.O.M.GestionComptes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A.T.O.M"
        mc:Ignorable="d"
        Title="ATOM - Gestion des Comptes Utilisateur" Height="350" Width="400"
        Background="#4682B4"
        Icon="/Images/Logo.ico">
    <DockPanel>
        <Label FontSize="25" FontWeight="Bold" DockPanel.Dock="Top" HorizontalAlignment="Center">Gestion des Comptes</Label>
        <StackPanel Width="200" HorizontalAlignment="Center" DockPanel.Dock="Top">
            <Label>Nom :</Label>
            <TextBox></TextBox>

            <Label>Prénom :</Label>
            <TextBox></TextBox>

            <Label>Identifiant :</Label>
            <TextBox></TextBox>

            <Label>Mot de passe :</Label>
            <TextBox></TextBox>

            <Label>Fonction :</Label>
            <ComboBox></ComboBox>
            </StackPanel>
        <WrapPanel Margin="0,10" HorizontalAlignment="Center" DockPanel.Dock="Bottom">
            <Button Margin="5" Width="100" IsDefault="True">Valider</Button>
            <Button Margin="5" Width="100" Click="Annuler" IsCancel="True">Annuler</Button>
        </WrapPanel>
        
    </DockPanel>
</Window>
